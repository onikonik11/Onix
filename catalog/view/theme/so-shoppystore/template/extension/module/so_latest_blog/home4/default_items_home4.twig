
<div class="item thumbnail">
	{% if type_show == 'simple' %}
		{% if blog.thumb and blog_image %}
			<a href="{{ blog.link }}" target="{{ item_link_target }}">
				<img data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ blog.thumb }}" alt="{{ blog.title }}" class="lazyload media-object"/>
			</a>
		{% endif %}
		<div class="caption">
			{% if display_title %}
				<h4 class="media-heading">
					<a href="{{ blog.link }}" title="{{ blog.title }}" target="{{ item_link_target }}">{{ blog.title_maxlength }}</a>
				</h4>
			{% endif %}
			
			{% if display_description %}
				<div class="description">
					{{ blog.description|striptags|slice(0, 200) }}
				</div>
			{% endif %}
			{% if display_date_added %}
				<div class="media-date-added"><i class="fa fa-calendar"></i> {{ blog.date_modified|date("F jS, Y")}}</div>
			{% endif %}
			
			{% if display_author or display_comment or display_view %}
				<div class="media-subcontent">
					{% if display_author %}
						<span class="media-author">{{ blog.author }}</span>
					{% endif %}
					{% if display_comment %}
						<span class="media-comment">{{ blog.comment_count }} {{ blog.text_comment }}</span>
					{% endif %}
					{% if display_view %}
						<span class="media-view">{{ blog.view_count }} {{ blog.text_view }}</span>
					{% endif %}
				</div>
			{% endif %}
			
			{% if display_readmore %}
				<div class="readmore">
					<a href="{{ blog.link }}" target="{{ item_link_target }}" class="readmore">{{ readmore_text }}</a>
				</div>
			{% endif %}
		</div>
	{% else %}
		{% if blog_image %}	
			<a href="{{ blog.link }}" target="{{ item_link_target }}">
				<img data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ blog.thumb }}" alt="{{ blog.title }}" class="lazyload media-object"/>
			</a>
		{% endif %}
		
		<div class="caption">
			
			{% if display_title %}
				<h4 class="media-heading font-ct head-item">
					<a href="{{ blog.link }}" title="{{ blog.title }}" target="{{ item_link_target }}">{{ blog.title_maxlength }}</a>
				</h4>
			{% endif %}

			{% if display_author or display_comment or display_view or display_date_added %}
				<div class="media-subcontent">
					{% if display_date_added %}
					<span class="media-date-added"> {{ blog.date_modified|date("M j, Y") }}</span> |
					{% endif %}
					{% if display_author %}
						<span class="media-author">{{ blog.author|capitalize }}</span> |
					{% endif %}
					{% if display_view %}
						<span class="media-view">{{ blog.view_count }} {{ blog.text_view }}</span> |
					{% endif %}
					{% if display_comment %}
						<span class="media-comment">{{ blog.comment_count }} {{ blog.text_comment }}</span>
					{% endif %}
				</div>
			{% endif %}

			{% if display_description %}
				<div class="description">
					{{ blog.description|striptags|slice(0, 200) }}
				</div>
			{% endif %}
			
			
			{% if display_readmore %}
				<div class="readmore">
					<a href="{{ blog.link }}" target="{{ item_link_target }}" >{{ readmore_text }}</a>
				</div>
			{% endif %}
    	</div>
	{% endif %}
</div>