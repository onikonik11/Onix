{% if marketshop_homepage_slideshow == 1 %}
<div id="slideshow{{ module }}" class="owl-carousel slideshowhome" style="opacity: 1;">
  {% for banner in banners %}
  <div class="item">
    {% if banner.link %}
    <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
    {% else %}
    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
    {% endif %}
  </div>
  {% endfor %}
</div>
<script type="text/javascript"><!--
$('#slideshow{{ module }}').owlCarousel({
	items: 6,
	autoPlay: 3000,
	singleItem: true,
	navigation: true,
	navigationText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
	pagination: true
});
--></script>
{% else %}
 <div class="slider-wrapper">
  <div id="slideshow{{ module }}" class="nivoSlider">
    {% for banner in banners %}
    {% if banner.link %}
    <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" /></a>
    {% else %}
    <img src="{{ banner.image }}" alt="{{ banner.title }}" />
    {% endif %}
    {% endfor %}
  </div>
</div>
<script type="text/javascript"><!--
$(document).ready(function() {
	$('#slideshow{{ module }}').nivoSlider({
	prevText: '<i class="fa fa-chevron-left"></i>',
	nextText: '<i class="fa fa-chevron-right"></i>', 
	});
});
--></script>
{% endif %}